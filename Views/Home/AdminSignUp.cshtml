@model CarBooking.Models.Car.BookingIndexViewModel
@{
    ViewData["Title"] = "AdminSignUp";     
}

<body class="reg" style="background-image:none">
<div>
    <h1 class="display-4">Додавання пропозицій</h1>
</div>
</body>

<div class="row">
    <div class="col col-8">
        <b>@Model.AddMessage</b>
        <form asp-controller="Car" asp-action="AddCar" method="post" enctype="multipart/form-data">
            <select name="brand" class="form-select" aria-label="Select">
                <option selected>Виберить марку авто</option>
                @foreach (var brand in Model.Brands)
                {
                    <option value="@brand.Id">@brand.Title</option>
                }
            </select>
            <div class="my-3">
                <label for="carName" class="form-label">Модель авто</label>
                <input type="text" class="form-control" id="carName" name="carName">
            </div>

            <div class="mb-3">
                <label for="carDescription" class="form-label">Опис</label>
                <textarea class="form-control" id="carDescription" name="carDescription" rows="3"></textarea>
            </div> 
            <div class="mb-3">
                <label for="price_per_day" class="form-label">Ціна</label>
                <input type="number" step="0.01" class="form-control" id="price_per_day" name="price_per_day">
            </div>

            <div class="mb-3">
                <label for="Image" class="form-label">Зображення</label>
                <input type="file" class="form-control" id="Image" name="Image"
                       aria-describedby="Image">
            </div>           
            <button type="submit" class="btn btn-secondary" style="margin-top:2rem;">Додати</button>
        </form>
    </div>
</div>
